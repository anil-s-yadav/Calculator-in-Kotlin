<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FBFDF8"
    android:backgroundTint="#FBFDF8">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="99dp"
        android:orientation="vertical"
        android:background="#D8E9DF"
        android:layout_weight="0.67">



        <TextView
            android:id="@+id/txtInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="0.50"
            android:paddingRight="20sp"
            android:paddingTop="5sp"
            android:layout_marginTop="50dp"
            android:textSize="15pt"/>

        <TextView
            android:id="@+id/txtSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="right"
            android:paddingRight="20sp"
            android:paddingTop="5sp"
            android:textColor="@color/black"
            android:textSize="16pt"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FBFDF8"
        android:paddingTop="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:textSize="22sp"
            android:textColor="#0B1F15"
            android:backgroundTint="#C0E9FA"
            app:cornerRadius="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Clear" />

        <ImageView
            android:id="@+id/backSpace"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight=".51"
            android:background="#D0E8D8"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/backspace"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="#FBFDF8"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnSeven"
            style="@style/CalculatorButton"
            android:text="7" />


        <Button
            android:id="@+id/btnEight"
            style="@style/CalculatorButton"

            android:text="8" />

        <Button
            android:id="@+id/btnNine"
            style="@style/CalculatorButton"
            android:text="9" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/FunctionButton"
            android:text="+" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="#FBFDF8"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnFour"
            style="@style/CalculatorButton"
            android:text="4" />


        <Button
            android:id="@+id/btnFive"
            style="@style/CalculatorButton"
            android:text="5" />


        <Button
            android:id="@+id/btnSix"
            style="@style/CalculatorButton"
            android:text="6" />

        <Button
            android:id="@+id/btnSubtract"
            style="@style/FunctionButton"
            android:text="-" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="#FBFDF8"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnOne"
            style="@style/CalculatorButton"
            android:text="1" />


        <Button
            android:id="@+id/btnTwo"
            style="@style/CalculatorButton"
            android:text="2" />


        <Button
            android:id="@+id/btnThree"
            style="@style/CalculatorButton"
            android:text="3" />



        <Button
            android:id="@+id/btnMultiply"
            style="@style/FunctionButton"
            android:text="x" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="#FBFDF8"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">


        <Button
            android:id="@+id/btnDecimal"
            style="@style/CalculatorButton"
            android:text="." />

        <Button
            android:id="@+id/btnZero"
            style="@style/CalculatorButton"
            android:text="0" />

        <Button
            android:id="@+id/btnEquals"
            style="@style/CalculatorButton"
            android:backgroundTint="#4BFFB4"
            android:text="=" />


        <Button
            android:id="@+id/btnDivide"
            style="@style/FunctionButton"
            android:text="/" />

    </LinearLayout>

</LinearLayout>