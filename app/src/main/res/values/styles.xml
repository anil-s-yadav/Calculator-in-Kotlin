<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Calculator button style -->
    <style name="CalculatorButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">#0B1F15</item>
        <item name="android:backgroundTint">#EEF</item>
    </style>

    <style name="FunctionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#0B1F15</item>

        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:backgroundTint">#D0E8D8</item>
    </style>


</resources>
